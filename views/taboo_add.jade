extends layout_admin

block content
  .page-header
    h1
      span.glyphicon.glyphicon-facetime-video
      &nbsp;&nbsp; Add Taboo
  form.form-horizontal(role="form", method="post", action="/taboo/save")
    .form-group
      label.col-sm-2.control-label Taboo Title
      .col-sm-10
        input.form-control(name="title" type="text",  placeholder="Taboo Title",  required)
    .form-group
      label.col-sm-2.control-label Taboo Foods
      .col-sm-10
        input.form-control(name="items" type="text", placeholder="Taboo Foods" required)
    .form-group
      label.col-sm-2.control-label Taboo Image
      .col-sm-10
        input.form-control(name="imageSrc" type="text", placeholder="Taboo image src" required)
    .form-group
      label.col-sm-2.control-label Taboo Reason
      .col-sm-10
        textarea.form-control(name="reason", rows="3" placeholder="Taboo Reason" required)
    .form-group
      .col-sm-offset-2.col-sm-10
        button.btn.btn-success(type="submit") Add
        &nbsp;&nbsp;
        a.btn.btn-default(href="/taboos") Cancel
